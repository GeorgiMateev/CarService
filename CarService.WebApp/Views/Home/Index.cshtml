@model CarService.WebApp.Models.Home.SearchModel
@{
    ViewBag.Title = "Home Page";
}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@section featured {
<section class="featured">
    <div class="content-wrapper">
        <hgroup class="title">
            <h1>@ViewBag.Title.</h1>
            <h2>@ViewBag.Message</h2>
        </hgroup>
    </div>
</section>
}

<h3>We suggest the following:</h3>
@using(Html.BeginForm("Search", "Home"))
{
    @Html.ValidationSummary(true, "Search was unsuccessful. Please correct the errors and try again.")
    <fieldset>
        <legend>Search form</legend>
        <ol class="round">
            <li class="one">
                <h5>Find repair cards</h5>
                @Html.LabelFor(m => m.RegistrationNumber)
                @Html.TextBoxFor(m => m.RegistrationNumber)
                @Html.ValidationMessageFor(m => m.RegistrationNumber)
                <p>or</p>
                @Html.LabelFor(m=>m.FrameNumber)
                @Html.TextBoxFor(m=>m.FrameNumber)
                @Html.ValidationMessageFor(m => m.FrameNumber)

                <input type="submit" value="Search"/>
            </li>
            <li class="two">
                <h5>See all repair cards</h5>
                @Html.ActionLink("Repair cards", "Index", "Repairs")
            </li>
            <li class="three">
                <h5>Log in as administrator to manage</h5>
                @Html.ActionLink("Spare parts", "Index", "Parts")
                @Html.ActionLink("Mechanics", "Index", "Mechanics")
                @Html.ActionLink("Users", "Index", "Users")
            </li>      
        </ol>
    </fieldset>
}

<section class="features">
    <section class="feature">
        <h3>About</h3>
        <p>
           This car service system was developed by Georgi Mateev
        </p>
        <a href="http://georgi-mateev.com" target="_blank">georgi-mateev.com</a>
    </section>
    <section class="feature">
        <h3>Technologies</h3>
        <p>
            ASP.NET MVC 4, Microsoft Sql Server 2008, Entity Framework
        </p>
    </section>
    <section class="feature">
        <h3>Web application development with ASP.NET MVC 4</h3>
        <p>
            This project is for the FMI and Telerik Academy's course
        </p>
        <a href="http://telerikacademy.com/Courses/Courses/Details/15" target="_blank">Web application development with ASP.NET MVC 4</a>
    </section>
</section>